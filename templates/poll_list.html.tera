<h3>Please select the poll to vote for:</h3>
<div id="polls">
{% for poll in polls %}
  <div class="pollList downHeader">
    <h1>{{poll.name}}</h1>
    <div>{{poll.desc | safe}}</div>
    <p class="loadVote" data-href="/vote_for/{{poll.filepath}}">Select this poll to vote</p>
    <due class="{% if poll.due_near %}passed{% endif %}">Due<br/>{{poll.due_date}}</due>
    <p class="voteResult" data-href="/vote_results/{{poll.filepath}}">Consult poll results</p>
  </div>
{% endfor %}
</div>
</form>